<PISI>
    <Source>
        <Name>fontconfig</Name>
        <Packager>
            <Name>Ikey Doherty</Name>
            <Email>ikey@solusos.com</Email>
        </Packager>
        <Summary>Font configuration utilities</Summary>
        <Description>The Fontconfig package contains a library and support programs used for configuring and customizing font access</Description>
        <License>GPLv3+</License>
        <Archive sha1sum="57a5323ebdb58b3f8062a735e0927b0f5b9a7729" type="targz">http://www.freedesktop.org/software/fontconfig/release/fontconfig-2.12.1.tar.gz</Archive>

        <Patches>
            <Patch level="1">0001-Support-local-configs-too-for-stateless-implementati.patch</Patch>
            <Patch level="1">0002-Enforce-sane-defaults-for-Solus.patch</Patch>
            <!-- Borrowed back from clear linux //-->
            <Patch level="1">0003-Enforce-antialiasing-by-default.patch</Patch>
        </Patches>

        <BuildDependencies>
            <Dependency type="pkgconfig">freetype2</Dependency>
            <Dependency type="pkgconfig32">freetype2</Dependency>
            <Dependency type="pkgconfig32">expat</Dependency>
            <Dependency>glibc-32bit-devel</Dependency>
            <Dependency>libgcc-32bit</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>fontconfig</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib64/lib*.so.*</Path>
            <Path fileType="data">/usr/share/fontconfig</Path>
            <Path fileType="data">/usr/share/xml/fontconfig</Path>
            <Path fileType="data">/var/cache/fontconfig</Path>
            <Path fileType="config">/usr/share/fonts/fonts.conf*</Path>
            <Path fileType="config">/usr/share/fonts/conf.d</Path>
        </Files>
        <Provides>
            <COMAR script="packageHandler.py">System.PackageHandler</COMAR>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>fontconfig-32bit</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so.*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">fontconfig</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>fontconfig-devel</Name>
        <PartOf>system.devel</PartOf>
        <Summary>Development files for fontconfig</Summary>
        <Description>Development files for fontconfig</Description>
        <Files>
            <Path fileType="library">/usr/lib64/lib*.so</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib64/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">fontconfig</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>fontconfig-32bit-devel</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Summary>Development files for fontconfig</Summary>
        <Description>Development files for fontconfig</Description>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so</Path>
            <Path fileType="data">/usr/lib32/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">fontconfig-devel</Dependency>
            <Dependency release="current">fontconfig-32bit</Dependency>
        </RuntimeDependencies>
    </Package>

